# https://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.txt]
indent_style = space
indent_size = 4

[CMakeLists.txt]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

# do not mess with external or generated sources
[ext/*,generated/*]
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
